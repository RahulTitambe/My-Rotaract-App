<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyRotaract" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_pink</item>
        <item name="colorPrimaryVariant">@color/primary_pink</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primary_pink</item>
        <item name="colorSecondaryVariant">@color/primary_pink</item>
        <item name="colorOnSecondary">@color/black</item>
        <!--Font-->
        <item name="fontFamily">@font/montserrat_medium</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/primary_pink</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.MyRotaract.Fullscreen" parent="Theme.MyRotaract">
        <item name="android:actionBarStyle">@style/Widget.Theme.MyRotaract.ActionBar.Fullscreen
        </item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.MyRotaract.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>
</resources>